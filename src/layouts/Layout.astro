---
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;

const pageTitle =
  title ? `${title} | Pedro Izquierdo` : "Pedro Izquierdo — QA de rendimiento y proyectos digitales";

const pageDescription =
  description ||
  "Portfolio de Pedro Izquierdo, QA de rendimiento especializado en JMeter, LoadRunner, Azure DevOps y automatización de pruebas. Descubre mi experiencia, proyectos y blog.";
---

<html lang="es">
  <head>
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Pedro Izquierdo` : "Pedro Izquierdo — QA de rendimiento y proyectos digitales"}</title>
    <meta
      name="description"
      content={description || "Portfolio de Pedro Izquierdo, QA de rendimiento especializado en JMeter, LoadRunner, Azure y automatización de pruebas. Descubre mis proyectos y experiencia profesional."}
    />
    
    <!-- SEO general -->
    <meta name="author" content="Pedro Izquierdo" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0f172a" />

    <!-- Fuente Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-transparent text-slate-50">
    <header class="sticky top-0 z-20 border-b border-white/5 bg-slate-950/80 backdrop-blur">
      <NavBar />
    </header>

    <main class="py-10 md:py-14">
      <slot />
    </main>

    <Footer />
  </body>
</html>
